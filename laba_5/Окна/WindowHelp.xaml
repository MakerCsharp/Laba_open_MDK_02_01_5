<Window x:Class="laba_5.Окна.WindowHelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba_5.Окна"
        mc:Ignorable="d"
        Title="WindowHelp" Height="450" Width="800">

    <Grid>
        <Grid Width="200" Height="80" >
            <Grid.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Margin="5" Stretch="Uniform" Source="/laba_5;component/картинки/help.png">
            </Image>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" >
                <TextBlock Text="Service" Margin="5 0 5 0" FontFamily="Agency FB" FontSize="14"/>
                <TextBlock Text="Price" Margin="5 0 5 0" Foreground="#FFE81111" FontFamily="Agency FB"/>
            </StackPanel>


        </Grid>
    </Grid>
</Window>
