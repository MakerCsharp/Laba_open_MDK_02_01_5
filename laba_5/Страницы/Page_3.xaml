                                    </Binding>
                                </Image.Source>
                            </Image>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" >
                                <TextBlock Text="{Binding Path= Services}" Margin="5 0 5 0" Width="Auto"/>
